/* pages/personal/personal.wxss */

.personalContainer {
    width: 100%;
    height: 100%;
    display: flex;
    background-color: #f5f5f5;
}

.personalContainer .user-section {
    height: 520rpx;
    padding: 100rpx 30rpx 0;

}

.bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    opacity: 0.7;
}

.user-content {
    /* width: 90%; */
    /* margin: 0 auto; */
    position: relative;
    display: flex;
    align-items: center;
    height: 180rpx;
    z-index: 1;
}

/* //头像 */
.user-content .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
}

.user-content text {
    /* line-height: 150rpx; */
    margin-left: 20rpx;

}